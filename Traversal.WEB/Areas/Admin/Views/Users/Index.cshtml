
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

@model List<AppUser>

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            @{sayac = sayac + 1;}
            <td>@sayac</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/Users/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Users/EditUser/@item.Id" class="btn btn-outline-primary">Düzenle</a></td>
            <td><a href="/Admin/Users/CommentUser/@item.Id" class="btn btn-outline-success">Yorumlar</a></td>
            <td><a href="/Admin/Users/ReservationUser/@item.Id" class="btn btn-outline-info">Tur Geçmişi</a></td>
        </tr>
    }
</table>

<a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Kullanıcı Girişi</a>